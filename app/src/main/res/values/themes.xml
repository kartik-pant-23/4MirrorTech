<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.MirrorTech" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorPrimary">@color/primary_color</item>
        <item name="colorOnPrimary">@color/dark_text_color</item>
        <item name="android:statusBarColor">@color/status_bar_color</item>
        <item name="android:windowBackground">@color/window_background</item>
    </style>
    <style name="BottomInactiveLabel">
        <item name="textAllCaps">true</item>
        <item name="android:textSize">11sp</item>
        <item name="android:includeFontPadding">false</item>
    </style>
    <style name="BottomActiveLabel" parent="BottomInactiveLabel">
        <item name="android:textSize">12sp</item>
    </style>
</resources>